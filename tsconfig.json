{
  "compilerOptions": {
    "module": "Node16",
    "esModuleInterop": true,
    "target": "ES2022",
    "moduleResolution": "Node16",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true
  },
  "lib": ["ES2022"],
  "include": [
    "./**/*.ts"
  ],
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}
